@page
@model WebApp.Pages.TestReports.DetailsModel
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Batch)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Batch)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.TestCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.TestCategory.Category)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Test.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Batch)
        </dt>
    </dl>
    <a asp-page="./Index">Back to List</a>

</div>
<div>

    <h1>Test Mark Transcript</h1>

    <table>
        <thead>
            <tr>
                <th rowspan="2">Student ID</th>
                <th rowspan="2">Email</th>
                <th colspan="5">Test Results</th>
            </tr>
            <tr>
                <th>Date Taken</th>
                <th>Time Taken (mins)</th>
                <th>Score</th>
                <th>Feedback</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var submission in Model.submissionList)
            {
                <tr class="line-separator">
                    <td>@submission.TestTaker.Id</td>
                    <td>@submission.TestTaker.Email</td>
                    <td>@submission.SubmittedDate.ToString("MM/dd/yyyy")</td>
                    <td>@submission.TimeTaken</td>
                    <td>@submission.Score</td>
                    <td>@submission.Feedback</td>
                    <td>@(submission.IsGraded == true ?  "Graded" : "Not graded")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr.line-separator {
        border-bottom: 1px solid #ddd;
    }
</style>