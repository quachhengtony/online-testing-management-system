@page
@model WebApp.Pages.Questions.DetailsModel
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.QuestionCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionCategory.Category)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionCreator.Id)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnswerList[0].IsCorrect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerList[0].Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AnswerList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCorrect)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Question.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
