@page
@model WebApp.Pages.SubmissionPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group form-inline">
                <div class="form-group mb-2">
                    <label class="control-label">Search</label>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <input name="searchString" class="form-control" />
                    <button class="btn btn-secondary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionList[0].Test.Batch)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.SubmissionList[0].Test.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.SubmissionList[0].TestTaker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionList[0].TimeTaken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionList[0].SubmittedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionList[0].GradedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionList[0].Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.SubmissionList[0].Feedback)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SubmissionList) {
        var isGraded = item.IsGraded.Value ? "" : "background: #e61919;";
        <tr style='@isGraded'>
            <td>
                @Html.DisplayFor(modelItem => item.Test.Batch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Test.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TestTaker.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>|
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
