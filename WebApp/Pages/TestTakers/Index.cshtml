@page
@model WebApp.Pages.TestTakers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group form-inline">
                <div class="form-group mb-2">
                    <label class="control-label">Search</label>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <input name="searchString" class="form-control" value="@ViewData["Search"]" />
                    <button class="btn btn-secondary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestTaker[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTaker[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTaker[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTaker[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTaker[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TestTakerList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    @*<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.TestTakerList.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.TestTakerList.HasNextPage ? "disabled" : "";
}
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.TestTakerList.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">Previous</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.TestTakerList.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">Next</a>
