@page
@model SubmissionListModel

<h1>All Submissions</h1>

<form method="get">
    <div class="form-group row">
        <label for="testTakerId" class="col-sm-2 col-form-label">Test Taker:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="testTakerId" name="TestTakerId" value="@Model.TestTakerId">
        </div>
    </div>
    <div class="form-group row">
        <label for="testId" class="col-sm-2 col-form-label">Test:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="testId" name="TestId" value="@Model.TestId">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-page="Submissions" class="btn btn-secondary">Clear</a>
</form>

@if (Model.Submissions.Count == 0)
{
    <p>No submissions found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Submission ID</th>
                <th>Test Taker ID</th>
                <th>Test ID</th>
                <th>Submitted Date</th>
                <th>Graded Date</th>
                <th>Time Taken</th>
                <th>Score</th>
                <th>Feedback</th>
                <th>Is Graded</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var submission in Model.Submissions)
            {
                <tr>
                    <td>@submission.Id</td>
                    <td>@submission.TestTakerId</td>
                    <td>@submission.TestId</td>
                    <td>@submission.SubmittedDate</td>
                    <td>@submission.GradedDate</td>
                    <td>@submission.TimeTaken</td>
                    <td>@submission.Score</td>
                    <td>@submission.Feedback</td>
                    <td>@(submission.IsGraded == true ? "Yes" : "No")</td>
                    <td>@submission.Content</td>
                </tr>
            }
        </tbody>
    </table>
}